
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <span class="col-xs-1">Name</span>
    <input data-bind="textInput: Name" class="col-xs-2"/>
</div>
<div class="row">
    <span class="col-xs-1">Card Number</span>
    <input data-bind="textInput: CardNumber" class="col-xs-2"/>
</div>
<div class="row">
    <span class="col-xs-1">Security Number</span>
    <input data-bind="textInput: SecurityNumber" class="col-xs-1"/>
</div>
<div class="row">
    <button data-bind="click: $root.ValidateForm" class="buy">Order</button>
</div>

