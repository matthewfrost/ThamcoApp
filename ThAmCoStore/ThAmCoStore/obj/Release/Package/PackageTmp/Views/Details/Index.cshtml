@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (System.Web.HttpContext.Current.User.Identity.Name.Length > 0)
{
<div class="row margin-top15">
    <div class="col-xs-11"></div>
    <button class="col-xs-1 buy">Buy</button>
</div>
}
else
{
    //"Log in to buy" button
}
<div class="row">
    <p class="col-xs-2 heading">Name</p>
    <p class="col-xs-2" data-bind="text: $root.SelectedBox().Name()"></p>
</div>
<div class="row">
    <p class="col-xs-2 heading">Description</p>
    <p class="col-xs-2" data-bind="text: $root.SelectedBox().Description()"></p>
</div>
<div class="row">
    <p class="col-xs-2 heading">Price</p>
    <p class="col-xs-2" data-bind="text: $root.SelectedBox().Price()"></p>
</div>

