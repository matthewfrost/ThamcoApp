<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/models")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @*@Scripts.Render("~/bundles/views")*@
    @if (Request.Url.ToString().Contains("Details"))
    {
        @Scripts.Render("~/bundles/detailscripts")
    }
    else if (Request.Url.ToString().Contains("Create"))
    {
        @Scripts.Render("~/bundles/createscripts")
    }
    else if (Request.Url.ToString().Contains("Cart")) {
        @Scripts.Render("~/bundles/cartscripts")
    }
    else
    {
        @Scripts.Render("~/bundles/homescripts")
    }
    @*@Scripts.Render("~/bundles/viewmodels")*@
    @Scripts.Render("~/bundles/controllers")

</head>
<body>
    <script id="user">@System.Web.HttpContext.Current.User.Identity.Name</script>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (System.Web.HttpContext.Current.User.Identity.Name.Length > 0)
                    {
                        <li>
                            @Html.ActionLink("shopping_cart", "Index", "Cart", new { area = "" }, new { @class = "material-icons" })
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
